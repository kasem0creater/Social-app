<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="2dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- image circle -->
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_circle_profile_comment_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bg_profile"
            app:c_background_color="@color/background"
            app:c_border="true"
            app:c_border_color="@color/background"
            app:c_border_width="1dp"
            app:c_shadow="true"
            app:c_shadow_color="@color/background"
            app:c_shadow_gravity="end"
            app:c_shadow_radius="5.5"
            android:layout_marginRight="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"/>

        <!-- comment -->
        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textSize="14dp"
            android:textStyle="bold"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/text_corner"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_circle_profile_comment_list"/>

        <!-- image comment image -->
        <ImageView
            android:id="@+id/image_comment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/txt_comment"
            android:layout_marginTop="4dp"
            />

        <!-- time -->
        <TextView
            android:id="@+id/txt_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/10/25550/10:30:33"
            android:textSize="10dp"
            android:layout_below="@id/image_comment"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>