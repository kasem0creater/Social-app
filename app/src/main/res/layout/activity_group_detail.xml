<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupDetailActivity">

    <!-- image circle -->
    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/image_group_detail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/bg_profile"
        app:c_background_color="@color/colorPrimary"
        app:c_border="true"
        app:c_border_color="#4A97E4"
        app:c_border_width="1dp"
        app:c_shadow="true"
        app:c_shadow_color="#000"
        app:c_shadow_gravity="end"
        app:c_shadow_radius="5.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_group_title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:hint="RMU"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image_group_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/txt_group_descrip_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="RMU"
        android:textSize="10sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/txt_group_title_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_add_friend_group"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:drawablePadding="2dp"
        android:drawableLeft="@drawable/icon_add_user"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/txt_group_descrip_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="4dp"
        android:text="add users "/>

    <Button
        android:id="@+id/btn_leave_group"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="Leave groups"
        android:drawablePadding="2dp"
        android:drawableLeft="@drawable/icon_leave_group"
        android:background="@android:color/transparent"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_friend_group" />

    <TextView
        android:id="@+id/txt_total_user_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="12 user"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/btn_leave_group"
        tools:layout_editor_absoluteX="33dp" />

   <!-- <RelativeLayout
        android:layout_width=""
        android:layout_height=""-->

</androidx.constraintlayout.widget.ConstraintLayout>